class Author < ActiveRecord::Base
  has_many :stories
end

class Story < ActiveRecord::Base
  belongs_to :author
  has_and_belongs_to_many :topics
end

class Topic < ActiveRecord::Base
  has_and_belongs_to_many :stories
end


